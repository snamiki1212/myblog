---
import "@pagefind/default-ui/css/ui.css";
---

<div class="search"></div>

<script>
  console.info("@@", "start PageFindUI loading...");
  import { PagefindUI } from "@pagefind/default-ui";

  new PagefindUI({
    element: ".search",
  });
</script>

<style>
  .search {
    max-width: 500px;
    transition-duration: 300ms;
    background: white;
    border-radius: 8px;
  }

  .search:not(:has(.pagefind-ui__hidden)) {
    padding: 16px;
    border-radius: 16px;
  }
</style>
