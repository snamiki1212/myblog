---
type Props = {
  title: string;
};
const { title } = Astro.props;
---

<div class="flex flex-col max-w-screen-sm">
  <div class="tabs">
    <span class="tab tab-lifted tab-border-none cursor-default bg-base-200">
      {title}
    </span>
  </div>
  <div class="bg-base-200 rounded-xl rounded-tl-none px-4 pb-4">
    <slot />
  </div>
</div>
