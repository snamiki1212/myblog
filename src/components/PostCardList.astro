---
import { type BlogEntry } from "../utils/astro.ts";
import { default as PostCard } from "../components/PostCard.astro";

type Props = {
  entries: BlogEntry[];
};
const { entries } = Astro.props;
---

<ul role="list" class="flex gap-6 flex-wrap justify-center py-6 px-0 lg:px-6">
  {entries.map((entry) => <PostCard entry={entry} />)}
</ul>
