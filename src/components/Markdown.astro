<!-- 
  `is:global` is needed for applying to slot component.
-->
<style lang="scss" is:global>
  .post-content {
    h1,
    h2,
    h3 {
      margin-top: 3rem;
      margin-bottom: 1rem;
      font-weight: 900;
    }
    h1 {
      font-size: 2rem;
    }
    h2 {
      font-size: 1.5rem;
      border-bottom: 1px solid lightgray;
    }
    h3 {
      font-size: 1rem;
    }
    h4,
    h5,
    h6 {
      color: red; // do not use these heading because it's too deep nest.
    }
    ul,
    ol {
      padding: 0.5rem;
      padding-left: 1rem;
    }
    > ul,
    ol {
      border: 1px solid rgba(255, 255, 255, 0.18);
      margin-bottom: 2rem;
    }
    ol {
      list-style-type: decimal;
    }
    ul {
      list-style-type: square;
    }
    li {
      margin: 0.5rem;
      margin-left: 1rem;
    }
    p {
      margin-bottom: 1rem;
    }
    pre {
      padding: 1.5rem;
      margin-bottom: 2rem;
    }
    a {
      text-decoration: underline;
      color: blue;
    }

    /**
    * blockquote style
    * @link https://css-tricks.com/snippets/css/simple-and-nice-blockquote-styling/
    */
    blockquote {
      background: #f9f9f9;
      border-left: 10px solid #ccc;
      margin: 1.5em 10px;
      padding: 0.5em 10px;
      quotes: "\201C""\201D""\2018""\2019";
    }
    blockquote:before {
      color: #ccc;
      content: open-quote;
      font-size: 4em;
      line-height: 0.1em;
      margin-right: 0.25em;
      vertical-align: -0.4em;
    }
    blockquote p {
      display: inline;
    }
  }

  /**************************
  * Moshimo Affiliate
  ***************************/
  .af-moshi-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;

    background: var(--white);
    border: 1px solid transparent;
    transition: border 0.5s;
    &:hover {
      transition: border 0.5s;
      border: 1px solid var(--base-dark);
    }
    & > a {
      width: 100%;
      padding: 1rem;
      text-align: center;
      & > img {
        margin: auto;
      }
      &:hover {
        border: 0px;
      }
    }
  }
</style>
