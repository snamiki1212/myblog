---
import { SITE_DESCRIPTION } from "../constants/site";
import logo from "../..//images/logo.svg";
import { SnsList } from "../components/SnsList";
import Avatar from "./Avatar.astro";
import { Image } from "astro:assets";
---

<div class="my_hero w-full flex justify-center flex-col gap-4">
  <div class="w-full">
    <Image src={logo} alt="logo" class="w-full mx-auto max-w-md px-8" />
  </div>
  <div class="mx-auto text-lg max-w-md text-base-content px-12">
    {SITE_DESCRIPTION}
  </div>
  <div class="mx-auto">
    <Avatar />
  </div>
  <div class="mx-auto flex gap-2">
    <SnsList />
  </div>
</div>

<style>
  :root {
    /* animation bg colors */
    --color1: hsla(240, 100%, 95%, 1);
    --color2: hsla(240, 100%, 80%, 1);
    --color3: hsla(240, 100%, 90%, 1);

    /*  */
    --color4: var(--color1);
    --duration: 3s;
  }

  .my_hero {
    background: linear-gradient(
      -45deg,
      var(--color1),
      var(--color2),
      var(--color3),
      var(--color4)
    );
    background-size: 400% 400%;
    animation: my_gradient var(--duration) ease infinite;
    height: 100vh;
  }

  @keyframes my_gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
