---
import { default as Avatar } from "../components/Avatar.astro";
import { SnsList } from "../components/SnsList";
import { AUTHOR, AUTHOR_DESCRIPTION } from "../constants/site";
---

<div class="glass rounded-xl p-2 px-4">
  <div class="flex gap-2">
    <Avatar />
    <div>
      <div class="text-base-content text-opacity-60 font-bold">
        {AUTHOR}
      </div>
      <div class="text-base-content text-opacity-40">
        {AUTHOR_DESCRIPTION}
      </div>
    </div>
  </div>
  <div class="flex justify-evenly p-2 px-4 text-base-content text-opacity-40">
    <SnsList />
  </div>
</div>
