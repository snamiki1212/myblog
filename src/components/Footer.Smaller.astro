---
import { COPYRIGHT } from "../constants/site";
import { SnsList } from "../components/SnsList";
import logo from "../..//images/logo.svg";
---

<footer class="footer py-4 mx-2 border-t text-base-content border-base-300">
  <div class="flex items-end">
    <img src={logo} alt="logo" class="mx-auto w-20" />
